{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
        "ssh_username": "ubuntu"
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-9a562df2",
        "instance_type": "t2.micro",
        "ssh_username": "{{user `ssh_username`}}",
        "ami_name": "base {{timestamp}}",
        "ami_description": "Docker Base AMI",
        "run_tags": {
            "ami-create": "docker_base"
        },
        "tags": {
            "ami": "docker_base"
        }
      }
    ],
    "push": {
      "name": "jb_hashicorp/docker_base",
      "vcs": false
    },
    "provisioners": [
      {
        "type": "shell",
        "script": "scripts/docker_base.sh"
      }
    ],
    "post-processors": [
      [
        {
          "type": "atlas",
          "artifact": "jb_hashicorp/docker_base",
          "artifact_type": "aws.ami",
          "metadata": {
            "created_at": "{{timestamp}}"
          }
        }
      ]
    ]
}
