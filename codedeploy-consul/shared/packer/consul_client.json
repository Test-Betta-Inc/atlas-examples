{
  "variables": {
    "region":             "us-east-1",
    "region_west":        "us-west-2",
    "source_ami":         "ami-9a562df2",
    "atlas_username":     "{{ env `ATLAS_USERNAME` }}",
    "atlas_name":         "consul_client"
  },
  "builders": [
    {
      "type":          "amazon-ebs",
      "region":        "{{user `region`}}",
      "source_ami":    "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username":  "ubuntu",
      "ami_name":      "{{user `atlas_username`}}-{{user `atlas_name`}}-{{timestamp}}",
      "ami_regions":   ["{{user `region_west`}}"]
    }
  ],
  "provisioners": [
    {
      "type":   "shell",
      "script": "shared/consul/installers/consul_install.sh"
    },
    {
      "type":        "file",
      "source":      "shared/consul/consul.d/consul_client.json",
      "destination": "/tmp/consul.json.tmp"
    },
    {
      "type":        "file",
      "source":      "shared/consul/init/consul.conf",
      "destination": "/tmp/consul.conf"
    },
    {
      "type":   "shell",
      "script": "shared/consul/installers/consul_conf_install.sh"
    },
    {
      "type":   "shell",
      "script": "shared/consul/installers/dnsmasq_install.sh"
    }
  ],
  "push": {
    "name":     "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs":      false,
    "base_dir": "../../",
    "include": [
      "shared/consul/installers/consul_conf_install.sh",
      "shared/consul/installers/consul_install.sh",
      "shared/consul/installers/dnsmasq_install.sh",
      "shared/consul/consul.d/consul_client.json",
      "shared/consul/init/consul.conf"
    ]
  },
  "post-processors": [
    [
      {
        "type":          "atlas",
        "artifact":      "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "amazon.image",
        "metadata": {
          "created_at": "{{timestamp}}"
        }
      }
    ]
  ]
}
